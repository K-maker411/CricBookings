@model CricBookingsWebsite.Models.ViewModels.CreateLanesViewModel

@{
    ViewData["Title"] = "Create Lanes";
}

<h1>Create Lanes</h1>

<div class="row">
    <div class="col-md-4">
        <!--<form asp-action="CreateLanes" asp-route-returnUrl="@ViewData["ReturnUrl"]"> -->
        <form method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="laneName" class="col-form-label">Lane Name</label>
                <input asp-for="laneName" class="form-control" />
                <span asp-validation-for="laneName" class="text-danger"></span>
            </div>
            <div class="form-check m-1">
                <input asp-for="@Model.isInactive" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.isInactive">Inactive?</label>
            </div>
            <div class="col-sm-10">
                <!-- <input type="submit" style="width:auto" value="Create Lane" class="btn btn-primary" /> -->
                <button type="submit" class="btn btn-primary">Create Lane</button>
            </div>
        </form>
    </div>
</div>




