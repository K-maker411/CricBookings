@model IEnumerable<Lane>

@{
    ViewBag.Title = "Lanes For Current Center";
}

<h1>Lanes for Current Center</h1>

@if (Model.Any())
{
    foreach (var lane in Model)
    {
    <div class="card mb-3">
        <div class="card-header">
            Lane ID: @lane.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">Lane Name: @lane.Name</h5>
            @if (lane.Inactive == true)
            {
                <h5 class="card-title">Inactive: True</h5>
            }
            else
            {
                <h5 class="card-title">Inactive: False</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-action="EditLane" asp-controller="Administrator" asp-route-id="@lane.Id">Edit Lane</a>
            <a href="#" class="btn btn-danger">Delete Lane</a>
            <a class="btn btn-primary" asp-action="ListCenters" asp-controller="Administrator">Back</a>
        </div>
    </div>
    }
    
}
else
{
    <div class="card">
        <div class="card-header">
            No lanes created yet for this center
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a lane
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administrator" asp-action="CreateLanes">
                Create Lane
            </a>
        </div>
    </div>
}
