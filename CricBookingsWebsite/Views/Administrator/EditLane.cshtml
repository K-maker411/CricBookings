@model CricBookingsWebsite.Models.ViewModels.EditLaneViewModel

@{
    ViewBag.Title = "Edit Lane";
}

<h1>Edit Lane</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="laneId" class="col-sm-2 col-form-label">Lane Id: </label>
        <div class="col-sm-10">
            <input asp-for="laneId" readonly="readonly" class="form-control" /> @*disabled keyword does not let you input info, which is why centerId kept being equal to 0*@
            <span asp-validation-for="laneId" class="text-danger"></span>
        </div>
        <label asp-for="centerId" class="col-sm-2 col-form-label">Center Id: </label>
        <div class="col-sm-10">
            <input asp-for="centerId" readonly="readonly" class="form-control" /> @*disabled keyword does not let you input info, which is why centerId kept being equal to 0*@
            <span asp-validation-for="centerId" class="text-danger"></span>
        </div>
        <label asp-for="laneName" class="col-sm-2 col-form-label">Name: </label>
        <div class="col-sm-10">
            <input asp-for="laneName" class="form-control" />
            <span asp-validation-for="laneName" class="text-danger"></span>
        </div>
        <div class="form-check m-1">
            <input asp-for="@Model.isInactive" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.isInactive">Inactive?</label>
        </div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</form>
