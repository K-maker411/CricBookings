@model CricBookingsWebsite.Models.ViewModels.EditCenterViewModel

@{
    ViewBag.Title = "Edit Center";
}

<h1>Edit Center</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="cityId" class="col-sm-2 col-form-label">City Id: </label>
        <div class="col-sm-10">
            <input asp-for="cityId" readonly="readonly" class="form-control" />
            <span asp-validation-for="cityId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="centerId" class="col-sm-2 col-form-label">Center Id: </label>
        <div class="col-sm-10">
            <input asp-for="centerId" readonly="readonly" class="form-control" /> @*disabled keyword does not let you input info, which is why centerId kept being equal to 0*@
            <span asp-validation-for="centerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="centerName" class="col-sm-2 col-form-label">Name: </label>
        <div class="col-sm-10">
            <input asp-for="centerName" class="form-control" />
            <span asp-validation-for="centerName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="addr1" class="col-sm-2 col-form-label">Address 1: </label>
        <div class="col-sm-10">
            <input asp-for="addr1" class="form-control" />
            <span asp-validation-for="addr1" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="addr2" class="col-sm-2 col-form-label">Address 2: </label>
        <div class="col-sm-10">
            <input asp-for="addr2" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="zip" class="col-sm-2 col-form-label">Zip: </label>
        <div class="col-sm-10">
            <input asp-for="zip" class="form-control" />
            <span asp-validation-for="zip" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListCenters" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>